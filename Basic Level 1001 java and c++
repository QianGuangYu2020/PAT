java:

import java.util.Scanner;
public class Main {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int n = sc.nextInt();
        int length=0;
        while(n!=1) {
        	if(n%2==0) {
        		n/=2;
        		length++;
        	}else {
        		n=(n*3+1)/2;
        		length++;
        	}
        }
        System.out.print(length);
     
    }

}

c++:

#include <stdio.h>
int main(){
    int ans=0;
    int num;
    scanf("%d", &num);
    while(num!=1){
        if(num%2==0){
            num/=2;
            ans++;
        }else{
            num=(num*3+1)/2;
            ans++;
        }
    }
    printf("%d", ans);
    return 0;
}
