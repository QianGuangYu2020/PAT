import java.util.Scanner;
public class Main {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int n = sc.nextInt();
        int length=0;
        while(n!=1) {
        	if(n%2==0) {
        		n/=2;
        		length++;
        	}else {
        		n=(n*3+1)/2;
        		length++;
        	}
        }
        System.out.print(length);
     
    }

}
